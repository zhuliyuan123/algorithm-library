
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ts-node Debugger",
            "type": "node",
            "request": "launch",
            "args": [
              "${workspaceRoot}/src/tmp.ts" // 入口文件
            ],
            "runtimeArgs": [
              "--nolazy",
              "-r",
              "ts-node/register"
            ],
            "sourceMaps": true, 
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
          }
    ]
}